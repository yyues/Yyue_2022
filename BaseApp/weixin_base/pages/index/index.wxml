<!--index.wxml-->
<view class="music-base">
  <van-search value="{{searchValue}}" placeholder="{{seachPlaceHolder}}" input-align="center" bind:search="onSearch" bind:change="seachChange" bind:cancel="onCancel">
  </van-search>
  <!-- banner -->
  <swiper class="music-swiper" autoplay="{{true}}" indicator-dots="{{false}}" indicator-color="#8a8a8a" indicator-active-color="#ff7878">
    <block wx:for="{{banner}}" wx:key="bannerId">
      <swiper-item class="swiper-item">
        <van-image radius="10rpx" width="100%" height="100%" src="{{item.pic}}"></van-image>
      </swiper-item>
    </block>
  </swiper>
  <!-- Scroll -->
  <!-- <scroll-view scroll-y="true" class="music-scroll" style="height: 400rpx;">
    <text>2222</text>
  </scroll-view> -->
  <user-login />
  <van-toast id="van-toast" />
</view>